<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Header" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:padding">8sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/background_material_light</item>
    </style>

    <style name="AppTheme.Header.Dark" parent="AppTheme.Header">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:background">@color/background_material_dark</item>
    </style>

    <style name="AppTheme.SubHeader" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/secondary_text_default_material_dark</item>
        <item name="android:layout_margin">0sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Value">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
